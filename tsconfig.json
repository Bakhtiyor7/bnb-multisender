{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
